extends layout

block scripts
    script(src='/javascripts/user_signout.js')

block content

    if single
        h1 #{user[0].name}
    else
        h1 User List

    ul
        li
            a(href="/user") Back

    table(border="1" cellpadding="5")
        tr#topRow
            td name
            td Enter
            td Leave
            td resources
        each val in user
            tr
                td
                    a(href='/user/' + val.name) #{val.name}
                td #{val.date.format('YYYY/MM/DD hh:mm A')}
                td #{val.date2}
                td #{val.resources}

    -var ct = 0;
    while ct <= cnt
        a.paginated(href='?p='+ct)= ct++
